{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "function-no-unknown": false,
    "import-notation": false,
    "length-zero-no-unit": null,
    "no-descending-specificity": null,
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "order/properties-alphabetical-order": true
  }
}
