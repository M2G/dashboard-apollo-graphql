{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "checkJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "noImplicitReturns": false,
    "removeComments": true,
    "noImplicitThis": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "outDir": "./build",
    "rootDirs": ["src"],
    "baseUrl": "src",
    "paths": {
      "index": ["./index"],
      "assets/*": ["./assets/*"],
      "utils": ["./utils/*"],
      "api": ["./api"],
      "gql": ["./gql/*"],
      "services": ["./services/*"],
      "sentry": ["./sentry/*"],
      "exceptions": ["./exceptions/*"],
      "fixtures": ["./fixtures/*"],
      "constants/*": ["./constants/*"],
      "components/*": ["./components/*"],
      "container/*": ["./container/*"],
      "routes/*": ["./routes/*"],
      "modules/*": ["./modules/*"],
      "hooks/*": ["./hooks/*"]
    },
    "types": ["jest"]
  },
  "include": [
    "./src",
    "./test",
    "./custom.d.ts",
    "./vite.config.ts",
    "./.eslintrc.cjs",
    "jest.config.js"
  ],
  "exclude": [
    "src/stories",
    "**/__tests__/*",
    "node_modules",
    "dist",
    "build",
    "node_modules",
    "config"
  ],
  "references": [{ "path": "./tsconfig.node.json" }],
  "compileOnSave": false,
  "buildOnSave": false
}
