{
  "compilerOptions": {
    "isolatedModules": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "noImplicitReturns": false,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": false,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "outDir": "./build",
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "rootDirs": ["src"],
    "baseUrl": "src",
    "paths": {
      "index": ["./index"],
      "utils": ["./utils/*"],
      "api": ["./api"],
      "sentry": ["./sentry/*"],
      "exceptions": ["./exceptions/*"],
      "fixtures": ["./fixtures/*"],
      "store/*": ["./store/*"],
      "services/*": ["./services/*"],
      "actions/*": ["./actions/*"],
      "constants/*": ["./constants/*"],
      "components/*": ["./components/*"],
      "container/*": ["./container/*"],
      "routes/*": ["./routes/*"]
    }
  },
  "include": ["src/**/*", "src/**/**/*", "test/**/*"],
  "exclude": [
    "src/stories",
    "**/__tests__/*",
    "node_modules",
    "dist",
    "build",
    "node_modules",
    "config"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
